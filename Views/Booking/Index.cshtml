@model IEnumerable<ThanhBuoi.Models.Chuyen>

@{
    ViewData["Title"] = "Danh sách chuyến";
}

<div class="container-fluid pt-4 px-4">
    <div class="row bg-light rounded justify-content-center p-4">
        <div class="col-md-12 vh-75">
            <h2 class="text-center">Danh sách chuyến</h2>
            <!-- Thanh tìm kiếm -->
            <div class="row mb-3">
                <div class="col-md-8 mx-auto">
                    <form method="get" action="@Url.Action("Index", "Booking")">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm theo tên chuyến" name="searchString">
                            <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Table list -->
            <div class="table-responsive col-md-12 mx-auto">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Tên chuyến</th>
                            <th scope="col">Thời gian đi</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chuyen in Model)
                        {
                            <tr>
                                <td>@chuyen.Ten</td>
                                <td>@chuyen.ThoiGianDi</td>
                                <td>@string.Format("{0:#,##0} VND", chuyen.Gia)</td>
                                <td>
                                    <a asp-action="Chuyens" asp-route-id="@chuyen.Id" class="btn btn-primary">Đặt vé</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Phân trang -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <nav aria-label="Page navigation" class="mx-auto">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", "Booking", new { page = ViewBag.CurrentPage - 1 })" tabindex="-1" aria-disabled="true">Previous</a>
                            </li>
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", "Booking", new { page = i })">@i</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", "Booking", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
