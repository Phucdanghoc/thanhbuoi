@model List<ThanhBuoi.Models.Ve>

@{
    ViewData["Title"] = "Ticket Details";
}

<div class=" bg-light m-4 me-4 p-4">
    <form id="ticketForm" method="post" asp-action="BookTickets">
        @for (int i = 0; i < Model.Count; i++)
        {
            var ve = Model[i];
            <div class="card mb-3">
                <div class="card-header">
                    <h4 class="card-title">Thông tin vé @(i + 1)</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-10">
                            <strong>Chuyến: @ve.Chuyen.Ten</strong>
                        </dt>
                    </dl>
                    <dt class="col-sm-4">
                        <strong>Tên ghế: @ve.Ghe.Ten</strong>
                    </dt>
                    <input type="hidden" name="VeList[@i].Id" value="@ve.Id" />
                    <div class="form-group p-3">
                        <label for="Ten" class="control-label">Họ và tên</label>
                        <input name="VeList[@i].Ten" class="form-control tenInput" />
                        <span class="text-danger tenError"></span>
                    </div>
                    <div class="form-group p-3">
                        <label for="CMND" class="control-label">Căn cước công dân</label>
                        <input name="VeList[@i].CMND" class="form-control cmndInput" />
                        <span class="text-danger cmndError"></span>
                    </div>
                    <div class="form-group p-3">
                        <label for="Sdt" class="control-label">Số điện thoại</label>
                        <input name="VeList[@i].Sdt" class="form-control sdtInput" />
                        <span class="text-danger sdtError"></span>
                    </div>
                    <div class="form-group p-3">
                        <label for="Hanhli" class="control-label">Số hành lí (Kg): </label>
                        <input name="VeList[@i].Hanhli" class="form-control hanhLiInput" />
                        <span class="text-danger hanhLiError"></span>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đặt vé</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#ticketForm').submit(function (event) {
            var errors = false;

            // Validate each input field
            $('.tenInput, .cmndInput, .sdtInput, .hanhLiInput').each(function () {
                var input = $(this);
                var error = input.siblings('.text-danger');
                if (input.val().trim() === '') {
                    error.text('Trường này là bắt buộc.');
                    errors = true;
                } else {
                    error.text('');
                }
            });

            // Validate phone number
            $('.sdtInput').each(function () {
                var sdtInput = $(this);
                var sdtError = sdtInput.siblings('.text-danger');
                if (!/^0\d{9,10}$/.test(sdtInput.val().trim())) {
                    sdtError.text('Số điện thoại không hợp lệ.');
                    errors = true;
                } else {
                    sdtError.text('');
                }
            });

            // Validate luggage weight
            $('.hanhLiInput').each(function () {
                var hanhLiInput = $(this);
                var hanhLiError = hanhLiInput.siblings('.text-danger');
                if (isNaN(hanhLiInput.val().trim()) || parseInt(hanhLiInput.val().trim()) < 0) {
                    hanhLiError.text('Số hành lí phải là số không âm.');
                    errors = true;
                } else {
                    hanhLiError.text('');
                }
            });

            if (errors) {
                event.preventDefault();
            }
        });
    });
</script>
