@model IEnumerable<ThanhBuoi.Models.TinTuc>

@{
    ViewData["Title"] = "Index";
}

<style>
    /* Custom styles for the table */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table th,
        .custom-table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            text-align: left;
        }

        .custom-table th {
            background-color: #007bff;
            color: #fff;
        }

    /* Custom styles for the buttons */
    .custom-btn {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        font-size: 14px;
        margin-right: 8px;
    }

    .custom-btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .custom-btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .custom-btn-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách tin tức</h2>
        <a asp-action="Create" class="custom-btn custom-btn-primary">Tạo mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped custom-table">
            <thead>
                <tr>
                    <th>Tiêu đề</th>
                    <th>Ngày đăng</th>
                    <th>Lượt xem</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TieuDe)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayDang)</td>
                        <td>@Html.DisplayFor(modelItem => item.LuotXem)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Xem chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
