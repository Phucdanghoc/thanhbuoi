@model ThanhBuoi.Models.DonHang

@{
    ViewData["Title"] = "Chi tiết hóa đơn vé";
}
<style>
    .highlight {
        color: #ff5733; /* Choose your desired highlight color */
        font-weight: bold;
    }

</style>
<div class="container mt-5 bg-light p-4 rounded shadow-sm">
    <h2 class="text-center">Chi tiết đơn vé</h2>

    <div class="card my-4 shadow-sm">
        <div class="card-body">
            <h3>Chi tiết đơn vé</h3>
            <p><strong>Trạng thái:</strong> @Model.Trangthai</p>
            <p><strong>Ngày tạo:</strong> @Model.NgayTao.ToString("dd/MM/yyyy")</p>
            <p><strong>Tổng tiền:</strong> @Model.Tien.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>
        </div>
    </div>

    <div>
        <h3 class="mb-4">Danh sách hàng</h3>
        @if (ViewBag.ChiTietVe != null)
        {
            @foreach (DonHangChiTiet ve in ViewBag.ChiTietVe)
            {
                <div class="card my-2 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Tên : @ve.Ve.Ten</h5>
                        <h6 class="card-title">Mã vé : @ve.Ve.MaVe</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Người gửi:</strong> @ve.Ve.Ten</p>
                                <p><strong>Số điện thoại người gửi:</strong> @ve.Ve.Sdt</p>
                                <p><strong>Trọng lượng:</strong> @ve.Ve.Hanhli kg</p>
                                <p><strong>Điểm đón:</strong> @ve.Ve.DiemDon</p>
                                <p><strong>Email:</strong> @ve.Ve.email</p>
                                <p><strong>CMND:</strong> @ve.Ve.CMND</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Phương thức thanh toán:</strong> @ve.Ve.phuongthucthanhtoan</p>
                                <p><strong>Trạng thái:</strong> @ve.Ve.TrangThai</p>
                                <p><strong>Ngày tạo:</strong> @ve.Ve.NgayTao.ToString("dd/MM/yyyy")</p>
                                <p><strong>Giá vé:</strong> <span class="highlight">@ve.Ve.Tien.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span></p>
                                <p><strong>Ghế:</strong> @ve.Ve.Ghe?.Id</p>
                                <p><strong>Chuyến:</strong> @ve.Ve.Chuyen?.Ten</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không có hàng trong đơn hàng này.</p>
        }
    </div>

    <form id="orderForm">
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" value="@Model.email" @(Model.email != null ? "disabled" : "") required>
                </div>
                <div class="form-group">
                    <label for="mota">Mô tả:</label>
                    <textarea class="form-control" id="mota" name="mota" rows="4" @(Model.Mota != null ? "disabled" : "")>@Model.Mota</textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Phương thức thanh toán:</label><br>
                    <div class="row">
                        @if (Model.PhuongThucThanhToan == "momo")
                        {
                            <div class="col-md-6 text-center">
                                <input type="radio" id="momo" name="paymentMethod" value="momo" checked disabled>
                                <label for="momo">Momo</label><br>
                                <img src="https://developers.momo.vn/v2/images/logo.png" alt="Momo" class="mt-2 img-fluid" style="max-width: 100px;">
                            </div>
                        }
                        else if (Model.PhuongThucThanhToan == "cash")
                        {
                            <div class="col-md-6 text-center">
                                <input type="radio" id="tienmat" name="paymentMethod" value="cash" checked disabled>
                                <label for="tienmat">Tiền mặt</label><br>
                                <img src="https://th.bing.com/th/id/OIP.IEUB1OoiFFBUrQaKu1quigigAAAA?rs=1&pid=ImgDetMain" alt="Tiền mặt" class="mt-2 img-fluid" style="max-width: 100px;">
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 text-center">
                                <input type="radio" id="momo" name="paymentMethod" value="momo">
                                <label for="momo">Momo</label><br>
                                <img src="https://developers.momo.vn/v2/images/logo.png" alt="Momo" class="mt-2 img-fluid" style="max-width: 100px;">
                            </div>
                            <div class="col-md-6 text-center">
                                <input type="radio" id="tienmat" name="paymentMethod" value="cash">
                                <label for="tienmat">Tiền mặt</label><br>
                                <img src="https://th.bing.com/th/id/OIP.IEUB1OoiFFBUrQaKu1quigigAAAA?rs=1&pid=ImgDetMain" alt="Tiền mặt" class="mt-2 img-fluid" style="max-width: 100px;">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Any required JavaScript can be added here
        });
    </script>
}
