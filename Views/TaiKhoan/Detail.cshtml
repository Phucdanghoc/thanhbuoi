@model ThanhBuoi.Models.TaiKhoan

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <h1 class="mb-4">User Details</h1>

    <div class="card">
        <div class="card-header">
            User Information
        </div>
        <div class="card-body">
            <p><strong>UserName:</strong> @Model.UserName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>PhoneNumber:</strong> @Model.PhoneNumber</p>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="hangguis-tab" data-bs-toggle="tab" data-bs-target="#hangguis" type="button" role="tab" aria-controls="hangguis" aria-selected="true">Hang Guis</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="ves-tab" data-bs-toggle="tab" data-bs-target="#ves" type="button" role="tab" aria-controls="ves" aria-selected="false">Ves</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <!-- Ves Tab -->
        <div class="tab-pane fade" id="ves" role="tabpanel" aria-labelledby="ves-tab">
            <div class="mt-4">
                <h2>Ves</h2>

                <!-- Search Input -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search by MaVe, Ten Chuyen, or Ten Ghe" aria-label="Search" aria-describedby="button-search" id="searchVeInput">
                    <button class="btn btn-outline-secondary" type="button" id="button-search">Search</button>
                </div>
                 <table class="table table-striped table-bordered" id="vesTable">
                    <!-- Table Headers -->
                    <thead class="thead-light">
                        <tr>
                            <th>Mã vé</th>
                            <th>Chuyến</th>
                            <th>Ghế</th>
                            <th>Hành lí</th>
                            <th>Ngày đặt vé</th>
                            <th>Tổng tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <!-- Table Body -->
                    <tbody>
                        @foreach (var ve in Model.Ves)
                        {
                            <tr>
                                <td>@ve.MaVe</td>
                                <td><a asp-controller="Chuyens" asp-action="Details" asp-route-itemid="@ve.Chuyen.Id">@ve.Chuyen.Ten</a></td>
                                <td>@ve.Ghe.Ten</td>
                                <td>@ve.Hanhli</td>
                                <td>@ve.NgayTao</td>
                                <td>@ve.Tien</td>
                                <td><a asp-action="Ve" asp-controller="Booking" asp-route-id="@ve.Id">Chi tiết</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#button-search').click(function () {
                var searchText = $('#searchVeInput').val().toLowerCase();
                $('#vesTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(searchText) > -1)
                });
            });
        });
    </script>
}