@model IEnumerable<ThanhBuoi.Models.Chuyen>

@{
    ViewData["Title"] = "Danh sách Chuyến";
}

<div class=" m-4 p-3 bg-light rounded">
    <h1 class="text-center">Danh sách Chuyến</h1>
    <form id="createForm" asp-action="Create">

    <div class="row">
        <h2 class="mt-4">Tạo mới</h2>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label for="XeId" class="form-label">Xe</label>
                            <select class="form-select" name="XeId" required>
                                <option value="">-- Chọn Xe --</option>
                                @foreach (var xe in ViewBag.listXeTrue)
                                {
                                    <option value="@xe.Id">@xe.Ten - @(xe.LoaiXe.LoaiGheXe == LoaiGheXe.Ngoi ? "Ngồi" : "Giường nằm")</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="TuyenId" class="form-label">Tuyến</label>
                            <select class="form-select" name="TuyenId" required>
                                <option value="">-- Chọn Tuyến --</option>
                                @foreach (var tuyen in ViewBag.listTuyen)
                                {
                                    <option value="@tuyen.Id">@tuyen.Ten</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="DiemDon" class="form-label">Điểm Đón</label>
                            <input id="DiemDon" name="DiemDon" class="form-control" required type="text"
                                   value="Bến Xe Miền Tây" readonly />
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="ThoiGianDi" class="form-label">Thời Gian Đi</label>
                            @{
                                string minDate = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
                            }
                            <input min="@minDate" id="ThoiGianDi" name="ThoiGianDi" class="form-control" type="datetime-local"
                                   required />
                        </div>
                        <div class="mb-3">
                            <label for="GiaSukienID" class="form-label">Giá Sự Kiện</label>
                            <select class="form-select" name="ngayle" required>
                                <option value="">-- Chọn Giá Sự Kiện --</option>
                                @foreach (var gia in ViewBag.listGiaTang)
                                {
                                    <option value="@gia.Key">@gia.Key - @(gia.Value * 100)%</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Gia" class="form-label">Giá (VND)</label>
                            <input id="Gia" name="Gia" class="form-control" type="number" step="10000" required />
                        </div>
                        <div class="text-center">
                            <input type="submit" value="Tạo" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </form>

    <h2 class="mt-4">Danh sách</h2>
    <div class="card">
        <div class="card-body ">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Tên</th>
                        <th scope="col">Xe</th>
                        <th scope="col">Loại xe</th>
                        <th scope="col">Thời Gian Đi</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                            <td>@Html.DisplayFor(modelItem => item.Xe.Ten)</td>
                            <td>@(item.Xe.LoaiXe.LoaiGheXe == LoaiGheXe.GiuongNam ? "Giường nằm" : "Ngồi")</td>
                            <td>@Html.DisplayFor(modelItem => item.ThoiGianDi)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Sửa</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                        Chi
                                        tiết
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const today = new Date().toISOString().slice(0, 16);
            $('#ThoiGianDi').attr('min', today);
        });

        function scrollToCreateForm() {
            var formSection = document.getElementById("createFormSection");
            formSection.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
}