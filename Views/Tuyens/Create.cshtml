@model ThanhBuoi.Models.GiaSukien

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GiaSukien</h4>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div class="bg-light rounded p-4">
                <h6 class="mb-4">Basic Form</h6>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Ten" class="form-label">Tên</label>
                    <input type="text" class="form-control" asp-for="Ten" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gia_hang" class="form-label">Giá hàng</label>
                    <input type="number" min="5" max="40" class="form-control" asp-for="Gia_hang" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gia_ve" class="form-label">Giá vé</label>
                    <input type="number" class="form-control" asp-for="Gia_ve" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayBatDau" class="form-label">Ngày bắt đầu</label>
                    <input type="datetime-local" class="form-control" asp-for="NgayBatDau" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
                    <input type="datetime-local" class="form-control" asp-for="NgayKetThuc" />
                    <span class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</form>

