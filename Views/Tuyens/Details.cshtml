@model ThanhBuoi.Models.Tuyen

@{
    ViewData["Title"] = "Details";
}

<style>
    .card-header {
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        padding: 1rem;
        margin-bottom: 0;
    }

    .card-title {
        margin-bottom: 0;
    }

    .table {
        margin-top: 1rem;
    }

        .table th,
        .table td {
            vertical-align: middle;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card bg-light rounded">
                <div class="card-header">
                    <h4 class="card-title text-white">
                        Chi tiết tuyến: @Html.DisplayFor(model => model.Ten)
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Các chuyến đi</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Tên chuyến</th>
                                    <th scope="col">Xe</th>
                                    <th scope="col">Điểm đón</th>
                                    <th scope="col">Thời gian đi</th>
                                    <th scope="col">Thời gian đến</th>
                                    <th scope="col">Giá (VND)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Chuyens)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                        <td><a asp-action="Details" asp-controller="Xes" asp-route-id="@item.Xe.Id">@Html.DisplayFor(modelItem => item.Xe.Ten)</a></td>
                                        <td>@Html.DisplayFor(modelItem => item.DiemDon)</td>
                                        <td>@item.ThoiGianDi.ToString("HH:mm dd/MM")</td>
                                        <td>@item.ThoiGianDen.ToString("HH:mm dd/MM")</td>
                                        <td>@String.Format("{0:N0}", item.Gia) VND</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-secondary" asp-action="Index">Trở lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
