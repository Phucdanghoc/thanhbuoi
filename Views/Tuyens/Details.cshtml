@model ThanhBuoi.Models.Tuyen

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="bg-light rounded h-100 p-4 m-4">
                <div class="card-header">
                    <h4 class="card-title  p-4">
                        Tuyến  :  @Html.DisplayFor(model => model.Ten)
                    </h4>
                </div>
            <div class="pt-4">
                    <h4 class="card-title">Các chuyến</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Chuyens.First().Ten)</th>
                                <th>Xe</th>
                                <th>@Html.DisplayNameFor(model => model.Chuyens.First().DiemDon)</th>
                                <th>@Html.DisplayNameFor(model => model.Chuyens.First().ThoiGianDi)</th>
                                <th>@Html.DisplayNameFor(model => model.Chuyens.First().Gia) VND</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Chuyens)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                    <td><a asp-action="Details" asp-controller="Xes" asp-route-id="@item.Xe.Id">@Html.DisplayFor(modelItem => item.Xe.Ten)</a> </td>
                                    <td>@Html.DisplayFor(modelItem => item.DiemDon)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ThoiGianDi)</td>
                                    <td>@String.Format("{0:N0} VND", item.Gia)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-4">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
