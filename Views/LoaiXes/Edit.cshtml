@model ThanhBuoi.Models.LoaiXe

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div class="row">
    <div class="col-md-4 ">
        <div class="bg-light rounded p-4 m-4">
            <h6 class="mb-4">Chỉnh sửa</h6>
            <form asp-action="Edit" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3">
                    <label asp-for="Ten" class="col-sm-4 col-form-label">Tên:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ten" asp-for="Ten" required>
                    </div>
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for="Mota" class="col-sm-4 col-form-label">Mô Tả:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="mota" asp-for="Mota">
                    </div>
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Tạo mới</button>
            </form>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

