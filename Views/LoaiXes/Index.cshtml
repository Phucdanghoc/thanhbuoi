@model IEnumerable<ThanhBuoi.Models.LoaiXe>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-4">
        <div class="bg-light rounded p-4 m-4">
            <h6 class="mb-4">Tạo loại xe mới</h6>
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <label for="ten" class="col-sm-4 col-form-label">Tên:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="ten" name="Ten" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="mota" class="col-sm-4 col-form-label">Mô Tả:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="mota" name="Mota">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="loaighe" class="form-label">Loại Ghế:</label>
                    <select class="form-select" id="loaighe" name="LoaiGhe" aria-label="Default select example">
                        <option value="GN">Giường nằm</option>
                        <option value="N">Ngồi</option>
                    </select>
                </div>
                <div class="mb-3" id="sogheContainer" style="display:none;">
                    <label for="soghe" class="form-label">Số Ghế:</label>
                    <select class="form-select" id="soghe" name="SoGhe" aria-label="Default select example">
                        <option value="7">7</option>
                        <option value="12">12</option>
                        <option value="20">20</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Tạo mới</button>
            </form>
        </div>
        <div class="row justify-content-center">
            <div id="seatLayoutContainer" class="col-md-auto bg-light rounded m-auto p-4"></div>
        </div>
    </div>

    <div class="col-8">
        <div class="bg-light rounded h-100 p-4 m-4">
            <h6 class="mb-4">Bảng xe</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Tên</th>
                            <th scope="col">Mô Tả</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                                <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary h-auto">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger h-auto">Delete</a>
                                        </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<style>
    .seat {
        width: 25px;
        height: 25px;
        border: 1px solid #000;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 3px;
    }

    .seat-container {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }
</style>

<script src="~/js/sodoxe/index.js"></script>